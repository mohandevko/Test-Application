<table class="table">
  <tr>
    <th>User Name</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Approved</th>
    <th></th>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.email %></td>
      <td id="approve"><%= user.approved == true ? "Approved" : "Not Approved" %></td>
      <td id="approve_link"><%= user.approved == true ? (link_to "Not Approve",approve_user_path(user,:status => false),:method => :put,:remote => true) : (link_to "Approve",approve_user_path(user,:status => true),:method => :put,:remote => true) %></td>
    </tr>
  <% end %>
</tr>
</table>
