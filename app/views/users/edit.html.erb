<h2>Edit Information</h2>

<%= form_for @user,:url => user_path(@user) do |f| %>
  <%= f.error_messages %>
  <div><%= f.label :username %><br />
    <%= f.text_field :username, :autofocus => true %></div>

  <div><%= f.label :first_name %><br />
    <%= f.text_field :first_name %></div>

  <div><%= f.label :last_name %><br />
    <%= f.text_field :last_name %></div>

  <div><%= f.label :date_of_birth %><br />
    <%= f.date_select :date_of_birth %></div>

  <div><%= f.label :city %><br />
    <%= f.text_field :city %></div>

  <div><%= f.label :state %><br />
    <%= f.text_field :state %></div>

  <div><%= f.label :country %><br />
    <%= f.text_field :country %></div>

  <div><%= f.label :attach %><br />
    <%= f.file_field :attach %></div>

  <div><%= f.submit "Update" %></div>
<% end %>
<style>
  select{
    width:70px;
  }
</style>